<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="None">
  </style>

  <!-- Base application theme. -->
  <style name="Base" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="CatchUp" parent="Base">
  </style>

  <style name="Catchup.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
    <!-- Force icons and title text to be all the same color -->
    <item name="colorControlNormal">?android:attr/textColorPrimary</item>
    <item name="android:textColorSecondary">?android:attr/textColorPrimary</item>
  </style>

  <style name="CatchUp.TabLayout" parent="Widget.Design.TabLayout">
    <item name="android:theme">@style/Theme.AppCompat</item>
    <item name="tabIndicatorColor">#FFFFFF</item>
  </style>

  <style name="CatchUp.Medium" parent="CatchUp">
    <item name="colorAccent">@color/mediumAccent</item>
  </style>

  <style name="CatchUp.ProductHunt" parent="CatchUp">
    <item name="colorAccent">@color/productHuntAccent</item>
  </style>

  <style name="CatchUp.Reddit" parent="CatchUp">
    <item name="colorAccent">@color/redditAccent</item>
  </style>

  <style name="CatchUp.GitHub" parent="CatchUp">
    <item name="colorAccent">@color/githubAccent</item>
  </style>

  <style name="CatchUp.HackerNews" parent="CatchUp">
    <item name="colorAccent">@color/hackerNewsAccent</item>
  </style>

  <style name="CatchUp.Slashdot" parent="CatchUp">
    <item name="colorAccent">@color/slashdotAccent</item>
  </style>

  <style name="CatchUp.DesignerNews" parent="CatchUp">
    <item name="colorAccent">@color/designerNewsAccent</item>
  </style>

  <style name="CatchUp.Dribbble" parent="CatchUp">
    <item name="colorAccent">@color/dribbbleAccent</item>
  </style>

</resources>
