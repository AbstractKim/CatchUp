<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="None">
  </style>

  <!-- Base application theme. -->
  <style name="Base" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="CatchUp" parent="Base">
    <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
  </style>

  <style name="CatchUp.TabLayout" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorColor">#FFFFFF</item>
    <item name="tabTextAppearance">@style/CatchUp.TabLayout.Tab</item>
    <item name="tabSelectedTextColor">@color/tab_text_selected</item>
    <item name="tabTextColor">@color/tab_text_default</item>
  </style>

  <style name="CatchUp.TabLayout.Tab" parent="TextAppearance.Design.Tab">
    <item name="textAllCaps">true</item>
  </style>

  <style name="CatchUp.Medium" parent="CatchUp">
    <item name="colorAccent">@color/mediumAccent</item>
  </style>

  <style name="CatchUp.ProductHunt" parent="CatchUp">
    <item name="colorAccent">@color/productHuntAccent</item>
  </style>

  <style name="CatchUp.Reddit" parent="CatchUp">
    <item name="colorAccent">@color/redditAccent</item>
  </style>

  <style name="CatchUp.GitHub" parent="CatchUp">
    <item name="colorAccent">@color/redditAccent</item>
  </style>

  <style name="CatchUp.HackerNews" parent="CatchUp">
    <item name="colorAccent">@color/hackerNewsAccent</item>
  </style>

</resources>
